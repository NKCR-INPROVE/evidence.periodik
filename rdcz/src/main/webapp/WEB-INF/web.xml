<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>IndexerServlet</servlet-name>
        <servlet-class>cz.incad.nkp.rdcz.IndexerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexerServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    
    
    
    
    <servlet>
        <servlet-name>InitServlet</servlet-name>
        <servlet-class>cz.incad.nkp.rdcz.InitServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    
    <servlet>
        <servlet-name>StaticServlet</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaticServlet</servlet-name>
        <url-pattern>/home</url-pattern>
        <url-pattern>/archiv/*</url-pattern>
        <url-pattern>/pro-autory/*</url-pattern>
        <url-pattern>/o-casopisu/*</url-pattern>
        <url-pattern>/kontakt/*</url-pattern>
        <url-pattern>/e-shop/*</url-pattern>
        <url-pattern>/hledat/*</url-pattern>
        <url-pattern>/article/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ForwardServlet</servlet-name>
        <servlet-class>cz.incad.nkp.rdcz.ForwardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForwardServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ConfigServlet</servlet-name>
        <servlet-class>cz.incad.nkp.rdcz.ConfigServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfigServlet</servlet-name>
        <url-pattern>/config/*</url-pattern>
        <url-pattern>/config</url-pattern>
        <url-pattern>/assets/config.json</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>I18nServlet</servlet-name>
        <servlet-class>cz.incad.nkp.rdcz.I18nServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>I18nServlet</servlet-name>
        <url-pattern>/assets/i18n/*</url-pattern>
        <url-pattern>/app/assets/i18n/*</url-pattern>
        <url-pattern>/i18n/*</url-pattern>
    </servlet-mapping>
    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
